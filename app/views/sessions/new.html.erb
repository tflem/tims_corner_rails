<% provide(:title, "Log In") %>

        <!-- Log In Section -->
    <section id="log in" class="container content-section">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <h1 class="text-center">Log In</h1>
              <% flash.each do |message_type, message| %>
                <div class="alert alert-<%= message_type %>"><%= message %></div>
              <% end %>
              <%= form_for(:session, url: login_path) do |f| %>

              <%= f.label :email %>
              <%= f.email_field :email, placeholder: 'email@example.com', class: 'form-control' %>

              <%= f.label :password %>
              <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>

              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Remember me on this computer</span>
              <% end %>

              <%= f.submit "Log in", class: "btn btn-default btn-lg" %>
              <% end %>

              <p>New user? <%= link_to "Sign up!", signup_path %></p>
            </div>
        </div>
    </section>