<% provide(:title, @user.name) %>

        <!-- User Section -->
    <section id="user" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-2">
                <% flash.each do |message_type, message| %>
                    <div class="alert alert-<%= message_type %>"><%= message %></div>
                <% end %>
                <h1>
                  <%= gravatar_for @user %>
                  <%= @user.name %>
                </h1>
            </div>
        </div>
    </section>