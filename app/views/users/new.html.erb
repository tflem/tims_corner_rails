<% provide(:title, 'Sign Up') %>

        <!-- Sign Up Section -->
    <section id="sign up" class="container content-section">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <h1 class="text-center">Sign Up</h1>
                    <%= form_for(@user, url: signup_path) do |f| %>
                      <%= render 'shared/error_messages' %>

                    <%= f.label :name %>
                    <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control' %>

                    <%= f.label :email %>
                    <%= f.email_field :email, placeholder: 'email@example.com', class: 'form-control' %>

                    <%= f.label :password %>
                    <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>

                    <%= f.label :password_confirmation, "Confirmation" %>
                    <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', class: 'form-control' %>

                    <%= f.submit "Create my account", class: "btn btn-default btn-lg" %>
                  <% end %>
            </div>
        </div>
    </section>